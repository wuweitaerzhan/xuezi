<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <script>
      var msg=prompt("请输入要发送的消息");
      var arr=msg.match(
          /([我卧]|wo)\s*([草操艹槽]|cao)/i
      );
      if(arr!=null)
         console.error(`在位置${arr.index}发现敏感词:${arr[0]}`)
      else
         console.log(`李然说:${msg}`)
    </script>
</body>
</html>
